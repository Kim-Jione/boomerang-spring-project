<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bumerang.domain.jobSearchPosition.JobSearchPositionDao">

    <select id="findById"
            resultType="com.example.bumerang.domain.jobSearchPosition.JobSearchPosition">
        SELECT * FROM job_search_position WHERE jobPosition_id=#{jobPositionId}
    </select>

    <select id="findAll"
            resultType="com.example.bumerang.domain.jobSearchPosition.JobSearchPosition">
        SELECT *
        FROM job_search_position
    </select>

    <insert id="insert">
        INSERT INTO job_search_position (job_position_title, job_id)
        VALUES
        (#{jobPositionTitle}, #{jobId})
    </insert>

    <insert id="insertPosition">
        INSERT INTO job_search_position (job_position_title, job_id)
        VALUES
        (#{jobPositionTitle}, #{jobId})
    </insert>

    <update id="updatePosition">
        UPDATE job_search_position
        SET
        job_position_title = #{jobPositionTitle}
        WHERE
        job_id = #{jobId}
    </update>

    <select id="findPositionList"
            resultType="String">
        SELECT job_position_title
        FROM job_search_position jsp
        WHERE jsp.job_id = #{jobId}
    </select>
</mapper>